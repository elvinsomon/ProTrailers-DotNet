@page
@model ProTrailers.Pages.Admin.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Trailer</h1>

<h3>Seguro que quiere eliminar @Model.Movie.Titulo?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Sinopsis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Sinopsis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Director)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Director)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Video)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Video)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Movie.MovieId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la tabla</a>
    </form>
</div>
