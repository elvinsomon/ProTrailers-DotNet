<div class="flex bg-white dark:bg-gray-900">
    <div class="container my-0">
        <div class="max-w-md mx-auto my-4">
            <div class="text-center">
                <h1 class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200">Crear una nueva cuenta <b>Admin</b></h1>
                <p class="text-gray-500 dark:text-gray-400">Ingrese los datos correspondientes</p>
            </div>
            <div class="m-7">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-6">
                        <label for="email" class="block mb-2 text-base text-gray-600 dark:text-gray-400">Email</label>
                        <input type="email" asp-for="Input.Email"  placeholder="mi@correo.com" class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-6">
                        <div class="flex justify-between mb-2">
                            <label for="password" class="text-base text-gray-600 dark:text-gray-400">Contraseña</label>
                        </div>
                        <input type="password" asp-for="Input.Password"  placeholder="Su Contraseña" class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-6">
                        <div class="flex justify-between mb-2">
                            <label for="password" class="text-base text-gray-600 dark:text-gray-400">Confirme su Contraseña</label>
                        </div>
                        <input type="password" asp-for="Input.ConfirmPassword" placeholder="Confirme su Contraseña" class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-6">
                        <button type="submit" class="w-full px-3 py-4 text-white bg-blue-800 hover:bg-blue-900 rounded-md focus:bg-indigo-600 focus:outline-none">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
